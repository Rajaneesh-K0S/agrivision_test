{
	"env": {
		"node": true,
		"browser": true,
		"commonjs": true,
		"es2021": true
	},
	"parserOptions": {
		"ecmaVersion": 12
	},
	"extends": "eslint:recommended",
	"rules": {
		"indent": ["error", 4],
		"linebreak-style": 0,
		"quotes": ["error", "single", "double"],
		"semi": ["error", "always"],
		"object-curly-spacing": ["error", "always"],
		"space-infix-ops": ["error", { "int32Hint": false }],
		"comma-spacing": ["error", { "before": false, "after": true }]
	}
}
